---
interface Props {
	title: string;
	subtitle: string;
}

const { title, subtitle } = Astro.props;
---

<section class="hero-section">
	<h1>{title}</h1>
	<p>{subtitle}</p>
</section>

<style>
	.hero-section {
		background: var(--color-gray-100);
		text-align: center;
		padding: 4rem 2rem 3rem;
	}

	.hero-section h1 {
		font-family: 'DynaPuff', cursive;
		font-size: 3rem;
		margin: 0 0 1rem 0;
		color: var(--color-gray-900);
	}

	.hero-section p {
		font-size: 1.2rem;
		color: var(--color-gray-600);
		max-width: 600px;
		margin: 0 auto;
		line-height: 1.6;
	}

	@media (max-width: 768px) {
		.hero-section h1 {
			font-size: 2.5rem;
		}

		.hero-section {
			padding: 3rem 1rem 2rem;
		}
	}

	@media (max-width: 480px) {
		.hero-section h1 {
			font-size: 2rem;
		}

		.hero-section p {
			font-size: 1.1rem;
		}
	}
</style>
