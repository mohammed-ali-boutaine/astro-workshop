<style>
	footer {
		background: var(--color-gray-900);
		color: white;
		padding: 3rem 5% 2rem;
		margin-top: auto;
	}

	.footer-content {
		display: grid;
		grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
		gap: 2rem;
		max-width: 1200px;
		margin: 0 auto;
		margin-bottom: 2rem;
	}

	.footer-section h3 {
		font-family: 'DynaPuff', cursive;
		font-size: 1.5rem;
		margin: 0 0 1rem 0;
		color: white;
	}

	.footer-section h4 {
		font-size: 1.1rem;
		margin: 0 0 1rem 0;
		color: var(--color-gray-200);
		font-weight: 600;
	}

	.footer-section p {
		color: var(--color-gray-300);
		line-height: 1.6;
		margin: 0;
	}

	.footer-section nav {
		display: flex;
		flex-direction: column;
		gap: 0.5rem;
	}

	.footer-section nav a {
		color: var(--color-gray-300);
		text-decoration: none;
		padding: 0.25rem 0;
	}

	.social-links {
		display: flex;
		gap: 1rem;
	}

	.social-links a {
		display: flex;
		align-items: center;
		justify-content: center;
		width: 40px;
		height: 40px;
		background: var(--color-gray-800);
		border-radius: 50%;
		text-decoration: none;
		color: var(--color-gray-300);
	}

	.footer-bottom {
		border-top: 1px solid var(--color-gray-700);
		padding-top: 2rem;
		text-align: center;
		max-width: 1200px;
		margin: 0 auto;
	}

	.footer-bottom p {
		color: var(--color-gray-400);
		font-size: 0.875rem;
		margin: 0.5rem 0;
		display: flex;
		justify-content: center;
		align-items: center;
		gap: 1rem;
		flex-wrap: wrap;
	}

	.footer-bottom a {
		color: var(--color-gray-300);
		text-decoration: none;
	}

	.footer-bottom span {
		color: var(--color-gray-600);
	}

	@media (max-width: 768px) {
		footer {
			padding: 2rem 5% 1.5rem;
		}

		.footer-content {
			grid-template-columns: 1fr;
			gap: 1.5rem;
		}

		.footer-section nav {
			flex-direction: row;
			flex-wrap: wrap;
			gap: 1rem;
		}

		.social-links {
			justify-content: center;
		}

		.footer-bottom p {
			flex-direction: column;
			gap: 0.5rem;
		}
	}
</style>
