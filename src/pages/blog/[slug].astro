---
import { getCollection, getEntryBySlug } from 'astro:content';
import Layout from '../../layouts/default.astro';

export async function getStaticPaths() {
  const blogEntries = await getCollection('blog');
  
  return blogEntries.map(entry => ({
    params: { slug: entry.slug },
    props: { entry },
  }));
}

const { slug } = Astro.params;
const { entry } = Astro.props;

// If we have the entry from props, use it, otherwise fetch it
const post = entry || await getEntryBySlug('blog', slug);

if (!post) {
  throw new Error(`Post not found for slug: ${slug}`);
}

const { Content } = await post.render();
const { data } = post;

// Redirect or show 404 for draft posts in production
if (data.draft && import.meta.env.PROD) {
  return Astro.redirect('/blog');
}
---

<Layout>
  <article class="blog-post">
    {data.draft && (
      <div class="draft-banner">
        <p>⚠️ This is a draft post and may not be complete.</p>
      </div>
    )}
    
    {data.image && (
      <div class="post-image">
        <img src={data.image} alt={data.title} />
      </div>
    )}
    
    <header class="post-header">
      <h1>{data.title}</h1>
      <div class="post-meta">
        <time datetime={data.date.toISOString()}>
          {data.date.toLocaleDateString('en-US', { 
            year: 'numeric', 
            month: 'long', 
            day: 'numeric' 
          })}
        </time>
        {data.draft && <span class="draft-indicator">Draft</span>}
      </div>
      {data.description && (
        <p class="post-description">{data.description}</p>
      )}
    </header>
    
    <div class="post-content">
      <Content />
    </div>
    
    <footer class="post-footer">
      <a href="/blog/" class="back-link">← Back to all posts</a>
    </footer>
  </article>
</Layout>

<style>
  .blog-post {
    max-width: 800px;
    margin: 0 auto;
    padding: 2rem;
  }

  .draft-banner {
    background: #fef3c7;
    border: 1px solid #f59e0b;
    border-radius: 8px;
    padding: 1rem;
    margin-bottom: 2rem;
    text-align: center;
  }

  .draft-banner p {
    margin: 0;
    color: #92400e;
    font-weight: 600;
  }

  .post-image {
    margin-bottom: 2rem;
  }

  .post-image img {
    width: 100%;
    height: 400px;
    object-fit: cover;
    border-radius: 12px;
  }

  .post-header {
    margin-bottom: 3rem;
    text-align: center;
  }

  .post-header h1 {
    font-family: 'DynaPuff', cursive;
    font-size: 2.5rem;
    margin: 0 0 1rem 0;
    color: var(--color-gray-900);
    line-height: 1.2;
  }

  .post-meta {
    display: flex;
    justify-content: center;
    align-items: center;
    gap: 1rem;
    flex-wrap: wrap;
    margin-bottom: 1rem;
    color: var(--color-gray-600);
  }

  .post-meta time {
    font-weight: 500;
  }

  .draft-indicator {
    background: #ef4444;
    color: white;
    padding: 0.25rem 0.75rem;
    border-radius: 12px;
    font-size: 0.875rem;
    font-weight: 600;
  }

  .post-description {
    font-size: 1.2rem;
    color: var(--color-gray-600);
    font-style: italic;
    line-height: 1.6;
    margin: 0;
  }

  .post-content {
    line-height: 1.7;
    color: var(--color-gray-700);
  }

  .post-content h2 {
    font-family: 'DynaPuff', cursive;
    font-size: 1.8rem;
    margin: 2.5rem 0 1rem 0;
    color: var(--color-gray-900);
  }

  .post-content h3 {
    font-size: 1.4rem;
    margin: 2rem 0 0.75rem 0;
    color: var(--color-gray-900);
    font-weight: 600;
  }

  .post-content p {
    margin: 1.5rem 0;
  }

  .post-content ul, .post-content ol {
    margin: 1.5rem 0;
    padding-left: 2rem;
  }

  .post-content li {
    margin: 0.5rem 0;
  }

  .post-content blockquote {
    border-left: 4px solid var(--color-gray-300);
    padding-left: 1.5rem;
    margin: 2rem 0;
    font-style: italic;
    color: var(--color-gray-600);
  }

  .post-content strong {
    color: var(--color-gray-900);
  }

  .post-content a {
    color: var(--color-gray-900);
    text-decoration: underline;
    font-weight: 500;
  }

  .post-content a:hover {
    color: var(--color-gray-700);
  }

  .post-content img {
    width: 100%;
    height: auto;
    border-radius: 8px;
    margin: 2rem 0;
  }

  .post-content code {
    background: var(--color-gray-100);
    padding: 0.25rem 0.5rem;
    border-radius: 4px;
    font-size: 0.9em;
  }

  .post-content pre {
    background: var(--color-gray-100);
    padding: 1.5rem;
    border-radius: 8px;
    overflow-x: auto;
    margin: 2rem 0;
  }

  .post-footer {
    margin-top: 3rem;
    padding-top: 2rem;
    border-top: 1px solid var(--color-gray-200);
  }

  .back-link {
    color: var(--color-gray-600);
    text-decoration: none;
    font-weight: 500;
    display: inline-flex;
    align-items: center;
    gap: 0.5rem;
    transition: color 0.3s ease;
  }

  .back-link:hover {
    color: var(--color-gray-900);
  }

  @media (max-width: 768px) {
    .blog-post {
      padding: 1rem;
    }

    .post-header h1 {
      font-size: 2rem;
    }

    .post-meta {
      flex-direction: column;
      gap: 0.5rem;
    }

    .post-description {
      font-size: 1.1rem;
    }

    .post-image img {
      height: 250px;
    }
  }
</style>