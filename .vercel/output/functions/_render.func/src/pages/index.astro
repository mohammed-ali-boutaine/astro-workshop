---
import Layout from '../layouts/default.astro';
import ShopItems from '../components/ShopItems.astro';
import ContactSection from '../components/ContactSection.astro';
---

<Layout>
	<section class="header hero">
		<div class="cta">
			<h1>Welcome to Savory</h1>
			<p class="lede">the Worlds leading sandwichestrust Savory</p>
			<a href="/shop" class="big-link">Shop Sandwich Kits</a>
		</div>
		<img src="hero-image.png" alt="" class="hero-image" decoding="async" />
	</section>
	<!-- shop items section  -->
	<section class="shop-items  products">
		<h2 class="section-title">Shop Sandwich Kits</h2>
		<ShopItems count={3} addToCartButton={false} />
		<p class="shop-link"><a href="/shop">Shop All Sandwich Kits &rarr;</a></p>

	</section>

	<!-- CTA Section -->
	<section class="home-cta">
		<div class="cta-container">
			<div class="cta-content">
				<h2>Ready to Master the Art of Sandwich Making?</h2>
				<p>Join thousands of home cooks who've transformed their kitchens with our expert-curated ingredients and step-by-step recipes. From artisan breads to premium meats, we deliver everything you need to create restaurant-quality sandwiches at home.</p>
				<div class="cta-buttons">
					<a href="/shop" class="cta-primary">Start Cooking Today</a>
					<a href="/blog" class="cta-secondary">Explore Recipes</a>
				</div>
			</div>
			<div class="cta-features">
				<div class="feature">
					<div class="feature-icon">
						<svg width="48" height="48" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
							<path d="M3 11v3a1 1 0 0 0 1 1h16a1 1 0 0 0 1-1v-3"/>
							<path d="M12 19H4a2 2 0 0 1-2-2v-6a2 2 0 0 1 2-2h16a2 2 0 0 1 2 2v6a2 2 0 0 1-2 2h-8Z"/>
							<path d="m8 8 4-4 4 4"/>
						</svg>
					</div>
					<h3>Artisan Ingredients</h3>
					<p>Carefully sourced from local farms and specialty producers</p>
				</div>
				<div class="feature">
					<div class="feature-icon">
						<svg width="48" height="48" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
							<path d="M14 2H6a2 2 0 0 0-2 2v16a2 2 0 0 0 2 2h12a2 2 0 0 0 2-2V8z"/>
							<polyline points="14,2 14,8 20,8"/>
							<line x1="16" y1="13" x2="8" y2="13"/>
							<line x1="16" y1="17" x2="8" y2="17"/>
							<polyline points="10,9 9,9 8,9"/>
						</svg>
					</div>
					<h3>Expert Recipes</h3>
					<p>Chef-tested instructions for perfect results every time</p>
				</div>
				<div class="feature">
					<div class="feature-icon">
						<svg width="48" height="48" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
							<path d="M1 3h15l-1 9H3L1 3Z"/>
							<path d="m16 8 2 8 4-8"/>
							<circle cx="7" cy="21" r="1"/>
							<circle cx="17" cy="21" r="1"/>
						</svg>
					</div>
					<h3>Fresh Delivery</h3>
					<p>Ingredients delivered fresh to your door when you need them</p>
				</div>
			</div>
		</div>
	</section>

	<!-- contact section -->
	<section class="contact-section-wrapper">
		<h1 class="section-title">Contact</h1>
		<ContactSection />
	</section>
</Layout>

<style>
	.hero {
		aspect-ratio: 2 / 3;
		display: flex;
		overflow: hidden;
		padding: 1rem 5% 40%;
		position: relative;
	}
	.section-title {
		font-size: 3rem;
		text-align: center;
	}
	.hero :not(.hero-image) {
		position: relative;
		z-index: 10;
	}

	.cta {
		max-width: 400px;
	}

	.hero h1 {
		font-size: clamp(1.75rem, 10vw, 2.5rem);
		margin: 0;
	}

	.lede {
		font-size: clamp(1rem, 5.75vw, 1.5rem);
		/* line-height: 1.25; */
		margin: 0.5rem 0 0;
	}

	.hero-image {
		position: absolute;
		inset: 0;
		object-fit: cover;
		object-position: 28% 0%;
		height: 135%;
		width: 135%;
		z-index: 1;
	}

	.shop-link {
		text-align: center;
	}

	.newsletter {
		align-items: center;
		background-color: var(--color-gray-100);
		display: flex;
		gap: 2rem;
	}

	.newsletter h3 {
		font-size: 1.5rem;
		margin: 0;
	}

	.newsletter img {
		aspect-ratio: 1;
		display: none;
		width: min(30%, 250px);
	}

	.newsletter-form {
		display: flex;
		flex-direction: column;
		flex-wrap: wrap;
		gap: 0.5rem;
	}

	.newsletter-form label {
		display: block;
		font-size: 0.75rem;
	}

	.newsletter-form input {
		display: block;
		font-size: 1rem;
		height: 2.125rem;
		padding: 0.25rem 0.5rem;
		width: 100%;
	}
.section-title{
	text-align: center;
}

	/* Home CTA Styles */
	.home-cta {
		background: linear-gradient(135deg, var(--color-gray-900) 0%, var(--color-gray-800) 100%);
		color: white;
		margin: 4rem 0;
	}

	.home-cta .cta-container {
		max-width: 1200px;
		margin: 0 auto;
		padding: 4rem 2rem;
	}

	.home-cta .cta-content {
		text-align: center;
		margin-bottom: 3rem;
	}

	.home-cta .cta-content h2 {
		font-family: 'DynaPuff', cursive;
		font-size: 2.5rem;
		margin: 0 0 1rem 0;
		color: white;
	}

	.home-cta .cta-content p {
		font-size: 1.125rem;
		line-height: 1.6;
		color: rgba(255, 255, 255, 0.9);
		max-width: 700px;
		margin: 0 auto 2rem auto;
	}

	.home-cta .cta-buttons {
		display: flex;
		gap: 1rem;
		justify-content: center;
		flex-wrap: wrap;
	}

	.home-cta .cta-primary, 
	.home-cta .cta-secondary {
		display: inline-flex;
		align-items: center;
		padding: 1rem 2rem;
		border-radius: 8px;
		text-decoration: none;
		font-weight: 600;
		font-size: 1rem;
		transition: all 0.3s ease;
	}

	.home-cta .cta-primary {
		background: white;
		color: var(--color-gray-900);
	}

	.home-cta .cta-primary:hover {
		background: var(--color-gray-100);
		transform: translateY(-2px);
	}

	.home-cta .cta-secondary {
		background: transparent;
		color: white;
		border: 2px solid white;
	}

	.home-cta .cta-secondary:hover {
		background: white;
		color: var(--color-gray-900);
		transform: translateY(-2px);
	}

	.home-cta .cta-features {
		display: grid;
		grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
		gap: 2rem;
		margin-top: 2rem;
	}

	.home-cta .feature {
		text-align: center;
		padding: 1.5rem;
	}

	.home-cta .feature-icon {
		width: 64px;
		height: 64px;
		margin: 0 auto 1rem auto;
		display: flex;
		align-items: center;
		justify-content: center;
		background: rgba(255, 255, 255, 0.1);
		border-radius: 12px;
		color: white;
	}

	.home-cta .feature h3 {
		font-size: 1.25rem;
		margin: 0 0 0.75rem 0;
		color: white;
	}

	.home-cta .feature p {
		color: rgba(255, 255, 255, 0.8);
		line-height: 1.5;
		margin: 0;
		font-size: 1rem;
	}

	.contact-section-wrapper {
		margin-top: 4rem;
		background: var(--color-gray-50);
		padding: 2rem 0;
	}
	@media (min-width: 450px) {
		.hero {
			aspect-ratio: 4 / 5;
		}

		.hero-image {
			height: 120%;
			object-position: 35% 50%;
			width: 120%;
		}

		.newsletter img {
			display: block;
		}
	}

	@media (max-width: 768px) {
		.home-cta .cta-container {
			padding: 3rem 1rem;
		}

		.home-cta .cta-content h2 {
			font-size: 2rem;
		}

		.home-cta .cta-buttons {
			flex-direction: column;
			align-items: center;
		}

		.home-cta .cta-primary, 
		.home-cta .cta-secondary {
			width: 100%;
			max-width: 280px;
			justify-content: center;
		}

		.home-cta .cta-features {
			grid-template-columns: 1fr;
			gap: 1.5rem;
		}
	}

	@media (min-width: 600px) {
		.hero {
			align-items: center;
			aspect-ratio: 3 / 2;
			justify-content: flex-end;
			padding: 2rem 5%;
		}

		.hero-image {
			height: 110%;
			object-fit: cover;
			object-position: 65% 50%;
			width: 100%;
		}
	}

	@media (min-width: 900px) {
		.hero {
			aspect-ratio: 2.5 / 1;
		}

		.hero-image {
			height: 100%;
			object-position: 50% 50%;
		}

		.newsletter-form {
			align-items: flex-end;
			flex-direction: row;
		}

		.newsletter-form label {
			width: 30%;
		}
	}

	@media (min-width: 1150px) {
		.hero {
			justify-content: flex-start;
			padding-left: 60%;
		}
	}
</style>
